<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bottom_sheet_background"
    android:layout_width="match_parent"
    android:padding="@dimen/_10sdp"
    android:id="@+id/layoutBottomSheet"
    android:layout_height="wrap_content"
    app:behavior_hideable="true"
    app:behavior_peekHeight="@dimen/_100sdp"
    app:layout_behavior="@string/hide_bottom_view_on_scroll_behavior">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:src="@drawable/ic_close_black_24dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="@dimen/_13sdp"
            android:fontFamily="@font/seguisb"
            android:layout_marginBottom="@dimen/_8sdp"
            android:text="Product Option"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backSlide"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:src= "@drawable/chevron_black"
            android:layout_margin="@dimen/_5sdp"
            android:padding="@dimen/_10sdp"
            android:background="@drawable/oval_background"/>


        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="@dimen/_150sdp"
            app:cardCornerRadius="@dimen/_10sdp"
           android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            app:cardPreventCornerOverlap="true"
            android:layout_weight="7">
            <LinearLayout
                android:layout_width="match_parent"
                android:background="@drawable/button_design"
                android:layout_height="match_parent">

                <ImageSwitcher
                    android:id="@+id/imageSwitcher"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:scaleType="fitXY"
                    android:src="@drawable/productioptionone" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>



        <ImageView
            android:id="@+id/nextSlide"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
            android:background="@drawable/oval_background"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BDT. 2,850 - BDT. 1,261"
        android:fontFamily="@font/seguisb"
        android:textSize="@dimen/_15sdp"
        android:textColor="#1D1D1E"
        android:gravity="center_horizontal"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Color"
        android:layout_margin="@dimen/_5sdp"
        android:fontFamily="@font/seguisb"
        android:textSize="@dimen/_13sdp"
        android:textColor="#1D1D1E"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="0dp"
            android:layout_height="@dimen/_50sdp"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/_3sdp">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/product_option_one"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_3sdp"
                android:src="@drawable/productioptionone"
                android:scaleType="fitXY"
                app:riv_corner_radius="5dip"
                app:riv_mutate_background="true"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="0dp"
            android:layout_height="@dimen/_50sdp"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/_3sdp">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/product_option_two"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_3sdp"
                android:scaleType="fitXY"
                app:riv_corner_radius="5dip"
                app:riv_mutate_background="true"
                android:src="@drawable/productoptiontwo" />



        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout3"
            android:layout_width="0dp"
            android:layout_height="@dimen/_50sdp"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/_3sdp">


            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/product_option_three"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_3sdp"
                android:scaleType="fitXY"
                app:riv_corner_radius="5dip"
                app:riv_mutate_background="true"
                android:src="@drawable/style1"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout4"
            android:layout_width="0dp"
            android:layout_height="@dimen/_50sdp"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/_3sdp">


            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/product_option_four"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_3sdp"
                android:scaleType="fitXY"
                app:riv_corner_radius="5dip"
                app:riv_mutate_background="true"
                android:src="@drawable/style2"/>


        </LinearLayout>



        <LinearLayout
            android:id="@+id/layout5"
            android:layout_width="0dp"
            android:layout_height="@dimen/_50sdp"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/_3sdp">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/product_option_five"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_3sdp"
                android:scaleType="fitXY"
                app:riv_corner_radius="5dip"
                app:riv_mutate_background="true"
                android:src="@drawable/style3"/>


        </LinearLayout>









    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Size"
        android:layout_margin="@dimen/_5sdp"
        android:fontFamily="@font/seguisb"
        android:textSize="@dimen/_13sdp"
        android:textColor="#1D1D1E"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal">

        <Button
            android:id="@+id/size_s"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_50sdp"
            android:fontFamily="@font/seguisb"
            android:textSize="@dimen/_13sdp"
            android:background="@drawable/button_design"
            android:textColor="#1D1D1E"
            android:text="S"/>
        <Button
            android:id="@+id/size_m"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_50sdp"
            android:fontFamily="@font/seguisb"
            android:textSize="@dimen/_13sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:textColor="#1D1D1E"
            android:background="@drawable/button_design"
            android:text="M"/>
        <Button
            android:id="@+id/size_x"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_50sdp"
            android:fontFamily="@font/seguisb"
            android:textSize="@dimen/_13sdp"
            android:textColor="#1D1D1E"
            android:layout_marginLeft="@dimen/_5sdp"
            android:background="@drawable/button_design"
            android:text="X"/>
        <Button
            android:id="@+id/size_xl"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_50sdp"
            android:fontFamily="@font/seguisb"
            android:textSize="@dimen/_13sdp"
            android:textColor="#1D1D1E"
            android:layout_marginLeft="@dimen/_5sdp"
            android:background="@drawable/button_design"
            android:text="XL"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:textColor="#1D1D1E"
            android:textSize="@dimen/_13sdp"/>

        <ImageButton
            android:id="@+id/quantity_decrement"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginLeft="@dimen/_30sdp"
            android:background="@drawable/oval_background"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/ic_remove_black_24dp"
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/counterTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="#1D1D1E"
            android:fontFamily="@font/seguisb"
            android:textSize="@dimen/_20sdp"

            android:layout_marginLeft="@dimen/_20sdp"
            android:textStyle="bold"/>


        <ImageButton
            android:id="@+id/quantity_increment"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginLeft="@dimen/_30sdp"
            android:background="@drawable/ovalcartcolor"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/ic_add_black_24dp"
            android:textColor="#ffffff"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="#AEB1C2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shipping:"
            android:textColor="#4D4D4D"
            android:drawableLeft="@drawable/fast_delivery"
            android:drawablePadding="@dimen/_15sdp"
            android:textSize="@dimen/_13sdp"
            android:fontFamily="@font/seguisb"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/_15sdp"
            android:fontFamily="@font/seguisb"
            android:gravity="right"
            android:layout_gravity="center|right"
            android:text="Estimated Delivery: 7-15 days"
            android:textColor="#B5B5B5"
            android:textSize="@dimen/_13sdp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="#AEB1C2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
     android:layout_marginTop="@dimen/_5sdp"
        android:gravity="left"
        android:background="@drawable/button_design"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="zDrop Premium Shipping"
            android:textColor="#515151"
            android:padding="@dimen/_2sdp"
            android:textSize="@dimen/_14sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:fontFamily="@font/segoe_ui"/>



        <Spinner
            android:id="@+id/spinnerId"
            android:padding="@dimen/_2sdp"
            android:layout_width="match_parent"
            android:gravity="right"
            android:layout_height="match_parent"/>


    </LinearLayout>


</LinearLayout>