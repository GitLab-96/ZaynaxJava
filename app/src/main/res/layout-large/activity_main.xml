                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:layout_height="wrap_content"
                    android:textColor="#CECECE"
                    android:textSize="@dimen/_15sdp"
                    android:textAlignment="textStart"
                    android:fontFamily="@font/segoe_ui"
