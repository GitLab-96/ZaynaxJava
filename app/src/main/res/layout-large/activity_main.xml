                    android:layout_weight="1"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardBackgroundColor="#E9FFF5">

                    <TextView
